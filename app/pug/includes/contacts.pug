  titleAndFind = {
    formName: "Контакты", 
    formText: "Поиск по контактам"
  }

div(class="bg-white px-4 pt-5")
  include titleAndFind.pug
  ul(class="list-group overflow-list")
    each persons, letter in contacts
      li(class="list-item list-unstyled")
        p(class="text-muted mt-5 mb-3")= letter
        each person in persons
          a(href="#" class="list-group-item-action action-on-item d-flex text-decoration-none p-4 shadow-sm border-top-0")
            img.avatar(src= person.avatar)
            div(class="d-flex flex-column ps-4")
              h3(class="fw-bold text-dark h6")= person.name
              p(class="small text-secondary")= person.status
